@using WebService.Models.ViewModels.Account
@model LoginViewModel

<form class="loginForm" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model?.ReturnUrl">
    <legend>Введите свои учетные данные</legend>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName" class="control-label">@Html.DisplayNameFor(modelItem => Model.UserName)</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">@Html.DisplayNameFor(modelItem => Model.Password)</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RememberMe" class="control-label"></label>
        <input asp-for="RememberMe" />
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Войти" />
    </div>
</form>
