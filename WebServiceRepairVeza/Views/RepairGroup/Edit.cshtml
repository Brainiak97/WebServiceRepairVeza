@model WebService.Models.ViewModels.RepairGroup.RepairGroupViewModel
@{
    ViewData["Title"] = "Edit";
}
<h2></h2>

<a href="javascript:history.go(-1)"
   class="btn btn-outline-dark">
    Вернуться
</a>

<h1>Изменение</h1>

<h4>Ремонтная группа</h4>
<hr />
<div class="row">
    <form class="d-flex flex-column gap-2 needs-validation" novalidate asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-floating">
            <input asp-for="Name" class="form-control" placeholder="Введите наименование" id="floatingInputName" required />
            <label for="floatingInputName" class="control-label">@Html.DisplayNameFor(modelItem => Model.Name)</label>
            <div class="invalid-feedback">
                Введите краткое наименование
            </div>
        </div>
        <div class="form-floating">
            <input asp-for="Description" class="form-control" placeholder="Введите описание" id="floatingInputDescription" required />
            <label for="floatingInputDescription" class="control-label">@Html.DisplayNameFor(modelItem => Model.Description)</label>
            <div class="invalid-feedback">
                Введите полное наименование
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-secondary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
