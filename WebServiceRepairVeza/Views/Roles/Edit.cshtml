@using Microsoft.AspNetCore.Identity
@model IdentityRole<int>

<h2></h2>

<a href="javascript:history.go(-1)"
   class="btn btn-outline-dark">
    Вернуться
</a>

<h1>Изменение</h1>

<h4>Роль</h4>
<hr />

<div class="container row-cols-lg-3 row-cols-1 d-flex justify-content-center">
    <form class="d-flex flex-column gap-2 needs-validation" novalidate asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ConcurrencyStamp" />
        <input type="hidden" asp-for="NormalizedName" />

        <div class="form-floating">
            <input asp-for="Name" id="name" class="form-control" placeholder="Введите наименование" required />
            <label for="name" class="control-label">Наименование роли</label>
            <div class="invalid-feedback">
                Введите наименование
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-secondary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }