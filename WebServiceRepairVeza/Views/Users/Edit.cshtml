@model WebService.Models.ViewModels.User.UserViewModel
@{
    ViewBag.Title = "Изменение пользователя";
}

<h2></h2>

<a href="javascript:history.go(-1)"
   class="btn btn-outline-dark">
    Вернуться
</a>

<div class="container row-cols-lg-3 d-flex justify-content-center">
    <form class="d-flex flex-column gap-2" asp-action="Edit" asp-controller="Users">
        <legend>Изменение пользователя @Model.UserName</legend>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-floating">
            <input asp-for="UserName" class="form-control" placeholder="Введите логин" id="floatingInputUserNameCreate" />
            <label for="floatingInputUserNameCreate" class="control-label">@Html.DisplayNameFor(modelItem => Model.UserName)</label>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-floating">
            <input asp-for="SurName" class="form-control" placeholder="Введите фамилию" id="floatingInputSurName" />
            <label for="floatingInputSurName" class="control-label">@Html.DisplayNameFor(modelItem => Model.SurName)</label>
            <span class="text-danger" asp-validation-for="SurName"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Name" class="form-control" placeholder="Введите имя" id="floatingInputName" />
            <label for="floatingInputName" class="control-label">@Html.DisplayNameFor(modelItem => Model.Name)</label>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-floating">
            <input asp-for="MiddleName" class="form-control" placeholder="Введите отчество" id="floatingInputMiddleName" />
            <label for="floatingInputMiddleName" class="control-label">@Html.DisplayNameFor(modelItem => Model.MiddleName)</label>
            <span class="text-danger" asp-validation-for="MiddleName"></span>
        </div>
        <div class="form-floating">
            <input asp-for="PhoneNumber" id="phone" class="form-control" placeholder="Введите номер телефона" id="floatingInputPhoneNumber" />
            <label for="floatingInputPhoneNumber" class="control-label">@Html.DisplayNameFor(modelItem => Model.PhoneNumber)</label>
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
        <div>
            <input class="btn btn-secondary btn mt-2" type="submit" value="Сохранить" />
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.2.1/dist/jquery.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery.maskedinput@1.4.1/src/jquery.maskedinput.js" type="text/javascript"></script>

<script>
    jQuery(function ($) {
        $(function () {
            function maskPhone() {
                $("#phone").mask("+375(99) 999-99-99");
            }
            maskPhone();
        });
    });
</script>
