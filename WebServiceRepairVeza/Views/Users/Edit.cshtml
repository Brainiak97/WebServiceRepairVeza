@model WebService.Models.ViewModels.User.UserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="Edit" asp-controller="Users">
    <legend>Изменение пользователя @Model.UserName</legend>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserName" />
    </div>
    <div class="form-group">
        <label asp-for="SurName" class="control-label"></label>
        <input type="text" asp-for="SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MiddleName" class="control-label"></label>
        <input type="text" asp-for="MiddleName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input id="phone" type="text" asp-for="PhoneNumber" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-secondary" />
    </div>
</form>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.2.1/dist/jquery.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery.maskedinput@1.4.1/src/jquery.maskedinput.js" type="text/javascript"></script>

<script>
    jQuery (function ($) {
      $(function() {
        function maskPhone() {
          $("#phone").mask("+375(99) 999-99-99");
        }
        maskPhone();
      });
    });
</script>